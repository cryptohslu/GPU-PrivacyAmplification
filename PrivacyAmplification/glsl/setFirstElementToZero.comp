#version 460
#extension GL_EXT_shader_explicit_arithmetic_types: enable

layout( local_size_x_id = 0 ) in;
layout(set = 0, binding = 0) writeonly buffer A { float do1[]; };
layout(set = 0, binding = 1) writeonly buffer B { float do2[]; };

void main(void)
{
	if (gl_GlobalInvocationID.x == 0) {
		do1[0] = 0.0f;
		do1[1] = 0.0f;
	}
	else
	{
		do2[0] = 0.0f;
		do2[1] = 0.0f;
	}
}
